<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/title"
                android:text="填写信息"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textColor="#000000"
                android:textSize="20dp"
                />
            <RelativeLayout
                android:id="@+id/select_icon"
                android:layout_below="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:id="@+id/select_icon_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="选择头像:"/>
                <ImageView
                    android:id="@+id/icon"
                    android:layout_below="@+id/select_icon_test"
                    android:padding="10dp"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/dog"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/username_rl"
                android:layout_below="@+id/select_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="30dp"
                >
                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="用户名:"/>
                <EditText
                    android:id="@+id/username"
                    android:layout_below="@+id/username_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/password_rl"
                android:layout_below="@+id/username_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/password_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="密码:"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/password_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:inputType="textPassword"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/password_sure_rl"
                android:layout_below="@+id/password_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/password_sure_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="确认密码:"/>
                <EditText
                    android:id="@+id/sure_password"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/password_sure_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:inputType="textPassword"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/sex_rl"
                android:layout_below="@+id/password_sure_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/sex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="性别:"/>
                <TextView
                    android:id="@+id/sex"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/sex_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/age_rl"
                android:layout_below="@+id/sex_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/age_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="年龄:"/>
                <EditText
                    android:id="@+id/age"
                    android:maxLength="3"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/age_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:inputType="datetime"
                    android:gravity="center_vertical"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/name_rl"
                android:layout_below="@+id/age_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="left"
                android:layout_marginTop="15dp"
                >
                <TextView
                    android:id="@+id/name_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="昵称:"/>
                <EditText
                    android:id="@+id/name"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/name_text"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/theme_shape"/>
            </RelativeLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_below="@+id/name_rl"
                android:layout_centerHorizontal="true"
                android:background="@drawable/theme_shape"
                android:text="下一步"
                android:layout_marginTop="10dp"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
