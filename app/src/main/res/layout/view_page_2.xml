<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ll_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <RelativeLayout
            android:id="@+id/rl_recommend"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp" >
            <ImageView
                android:id="@+id/recommend_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/recommend_path_icon"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_below="@+id/recommend_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐路线"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_select_path"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:background="#dcdcdc">
            <ImageView
                android:id="@+id/select_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/select_path_icon"
                android:scaleType="fitXY"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_below="@+id/select_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自选路线"
                android:textColor="#000000"
                android:layout_marginTop="5dp"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/tiananmen"
        android:layout_below="@+id/ll_path"
        android:src="@mipmap/timg"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <Spinner
        android:id="@+id/select_path"
        android:background="@drawable/theme_shape"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tiananmen"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:background="@drawable/theme_shape"
        android:text="确定"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:textSize="20dp"
        android:id="@+id/sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_path"
        android:layout_marginTop="20dp"/>

</RelativeLayout>
